{
	"name": "transmut",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"test": "vitest",
		"build:pkg": "npm run build:pkg:prepare && npm run build:pkg:copy-wasm && pkg dist/backend/cli.js --targets node20-linux-x64 --output dist/transmut",
		"build:pkg:prepare": "rm -rf dist && tsc -p tsconfig.pkg.json",
		"build:pkg:copy-wasm": "mkdir -p dist && cp node_modules/sql.js/dist/sql-wasm.wasm dist/sql-wasm.wasm",
		"example:build": "esbuild ./test/frontend.ts --bundle --format=esm --platform=browser --target=es2022 --sourcemap --outdir=./test/dist",
		"example:watch": "esbuild ./test/frontend.ts --bundle --format=esm --platform=browser --target=es2022 --sourcemap --outdir=./test/dist --watch",
		"example:backend": "tsx ./test/backend.ts"
	},
	"devDependencies": {
		"@types/node": "^22.7.5",
		"esbuild": "^0.24.0",
		"jsdom": "^24.1.1",
		"pkg": "^5.8.1",
		"tsx": "^4.19.1",
		"typescript": "~5.9.3",
		"vitest": "^2.1.3"
	},
	"dependencies": {
		"sql.js": "^1.10.2",
		"translate": "^3.0.1"
	}
}
